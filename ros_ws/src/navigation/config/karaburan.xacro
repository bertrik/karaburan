<?xml version="1.0" ?>

<robot name="karaburan" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:property name="with_gazebo" default="false"/>

  <xacro:property name="WITH_GAZEBO"
    value="${str(with_gazebo).lower() in ['1','true','yes']}"/>

  <xacro:if value="${WITH_GAZEBO}">
    <gazebo>
      <plugin name="hydrodynamics" filename="gz-sim-hydrodynamics-system">
        <link_name>base_link</link_name>
        <water_density>998</water_density>
        <xU>80</xU><xUabsU>300</xUabsU>
        <yV>80</yV><yVabsV>300</yVabsV>
        <zW>300</zW><zWabsW>1500</zWabsW>
        <kP>80</kP><kPabsP>300</kPabsP>
        <mQ>80</mQ><mQabsQ>300</mQabsQ>
        <nR>40</nR><nRabsR>200</nRabsR>
      </plugin>
    </gazebo>
  </xacro:if>

  <material name="black">
     <color rgba="0.9 0.9 0.9 0.8" />
  </material>

  <!-- Box inertia (COM op link-origin) -->
  <xacro:macro name="inertial_box" params="m x y z">
    <inertial>
      <origin xyz="0 0 ${z/2 + 0.01} " rpy="0 0 0"/>
      <mass value="${m}"/>
      <inertia
        ixx="${m*(y*y+z*z)/12.0}" ixy="0" ixz="0"
        iyy="${m*(x*x+z*z)/12.0}" iyz="0"
        izz="${m*(x*x+y*y)/12.0}"/>
    </inertial>
  </xacro:macro>

  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.6 0.4 0.2" />
      </geometry>
      <origin xyz="0 0 0.1" rpy="0 0 0" />
      <material name="black" />
    </visual>
    <collision>
      <geometry>
        <box size="0.6 0.4 0.2" />
      </geometry>
      <origin xyz="0 0 0.1" rpy="0 0 0" />
    </collision>
    <xacro:inertial_box m="4.0" x="0.6" y="0.4" z="0.2" />
  </link>

  <link name="imu_link">
    <visual>
      <geometry>
        <box size="0.03 0.03 0.001"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <material name="black" />
    </visual>
  </link>

  <link name="gps">
    <visual>
      <geometry>
        <box size="0.03 0.03 0.01"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <material name="black" />
    </visual>
  </link>

  <link name="lidar">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.05" />
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <material name="black" />
    </visual>
    <collision>
      <geometry>
        <box size="0.1 0.1 0.05" />
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <material name="black" />
    </collision>
  </link>

  <joint name="base_imu_joint" type="fixed">
    <parent link="base_link" />
    <child link="imu_link" />
    <origin xyz="0.25 0 0.201" rpy="0 0 0" />
  </joint>

  <joint name="base_gps_joint" type="fixed">
    <parent link="base_link" />
    <child link="gps" />
    <origin xyz="-0.25 0 0.201" rpy="0 0 0" />
  </joint>

  <xacro:macro name="prop_link" params="prefix">
    <link name="${prefix}_prop">
      <visual>
        <geometry>
          <cylinder radius="0.04" length="0.025" />
        </geometry>
        <origin xyz="0 0 0" rpy="0 1.57 0" />
        <material name="black" />
      </visual>
    </link>
  </xacro:macro>

  <xacro:prop_link prefix="left" />
  <xacro:prop_link prefix="right" />

  <joint name="base_lidar_joint" type="fixed">
    <parent link="base_link" />
    <child link="lidar" />
    <origin xyz="0 0 0.225" rpy="0 0 0" />
  </joint>

  <joint name="base_left_prop_joint" type="continuous">
    <parent link="base_link" />
    <child link="left_prop" />
    <origin xyz="-0.25 0.1 -0.045" rpy="0 0 0" />
    <axis xyz="1 0 0" />
  </joint>

  <joint name="base_right_prop_joint" type="continuous">
    <parent link="base_link" />
    <child link="right_prop" />
    <origin xyz="-0.25 -0.1 -0.045" rpy="0 0 0" />
    <axis xyz="1 0 0" />
  </joint>
</robot>
